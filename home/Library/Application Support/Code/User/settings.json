{
  "editor.fontFamily": "\"Source Han Code JP\", \"Symbols Nerd Font\", monospace",
  "editor.fontSize": 13,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "files.insertFinalNewline": true,
  "workbench.colorCustomizations": {
    // Referred to GitLens
    "git.blame.editorDecorationForeground": "#99999959"
  },
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "file-icons",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  // Prevent confirmation prompts when handling vscode:// URLs (e.g. links in notifications).
  "security.promptForLocalFileProtocolHandling": false,
  "git.autofetch": true,
  "git.blame.editorDecoration.enabled": true,
  // Referred to GitLens
  "git.blame.editorDecoration.template": "${authorName}, ${authorDateAgo} â€¢ ${subject}",
  "git.blame.statusBarItem.enabled": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "claudeCode.useTerminal": true,
  "claudeCode.allowDangerouslySkipPermissions": true
}
